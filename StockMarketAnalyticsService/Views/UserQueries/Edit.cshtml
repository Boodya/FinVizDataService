@model StockMarketAnalyticsService.Models.LinqProcessorRequestModel
@{
    ViewBag.Title = Model. == null ? "Add Query" : "Edit Query";
}
<h1>@ViewBag.Title</h1>
<form method="post" action="/Query/Save">
    <label>Filter:</label>
    <textarea name="Filter" required>@Model.Filter</textarea>
    <label>Sort:</label>
    <input type="text" name="Sort" value="@Model.Sort" />
    <label>Select:</label>
    <input type="text" name="Select" value="@Model.Select" />
    <label>Top:</label>
    <input type="number" name="Top" value="@Model.Top" required />
    <button type="submit">Save</button>
    <a href="/Query/List">Cancel</a>
</form>
