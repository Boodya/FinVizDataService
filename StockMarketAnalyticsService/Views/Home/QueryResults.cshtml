@model IEnumerable<FinVizDataService.Models.FinVizDataItem>

@{
    ViewBag.Title = "Query Results";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="container mt-4">
    <h1 class="text-center mb-4">@ViewBag.Title</h1>

    <div class="row">
        @if (!Model.Any())
        {
            <div class="col-12">
                <p class="text-muted text-center">No results available.</p>
            </div>
        }
        else
        {
            @foreach (var item in Model)
            {
                <div class="col-12 col-md-6 col-lg-4 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary text-white d-flex justify-content-between align-items-center">
                            <h5 class="mb-0">
                                <a href="/home/instrument?ticker=@item.Ticker" class="text-decoration-none">
                                    @item.Ticker
                                </a>
                            </h5>
                            <small>@item.Date.ToString("yyyy-MM-dd")</small>
                        </div>

                        <div class="card-body">
                            <ul class="list-unstyled mb-0">
                                @foreach (var kvp in item.ItemProperties)
                                {
                                    <li>
                                        <strong>@kvp.Key:</strong> @kvp.Value
                                    </li>
                                }
                            </ul>
                        </div>
                    </div>
                </div>
            }
        }
    </div>
</div>
