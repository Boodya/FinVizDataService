@using Newtonsoft.Json
@using StockMarketServiceDatabase.Models
@model List<UserQueryModel>

@{
    ViewBag.Title = "Query List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">@ViewBag.Title</h1>
    <a href="/Home/Edit" class="btn btn-primary">Add New Query</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Query</th>
                <th scope="col" class="text-center">Action</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var query in Model)
                {
                    <tr>
                        <td>@query.QueryTitle</td>
                        <td>
                            <pre class="m-0 p-2 bg-light rounded border">@Html.Raw(JsonConvert.SerializeObject(query.Query, Formatting.Indented))</pre>
                        </td>
                        <td class="text-center">
                            <div class="d-flex justify-content-center">
                                <a href="/Query/Edit?id=@query.QueryId" class="btn btn-sm btn-warning me-2">Edit</a>
                                <a href="/Query/Delete?id=@query.QueryId" class="btn btn-sm btn-danger me-2">Delete</a>
                                <a href="/Query/Execute?id=@query.QueryId" class="btn btn-sm btn-success">Execute</a>
                            </div>
                        </td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center text-muted">No queries found. Click "Add New Query" to create one.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
