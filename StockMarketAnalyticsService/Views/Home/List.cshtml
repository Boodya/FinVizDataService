@using Newtonsoft.Json
@using StockMarketServiceDatabase.Models.Query;
@model List<UserQueryModel>

@{
    ViewBag.Title = "Query List";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <h1 class="h3">@ViewBag.Title</h1>
    <a href="/Home/Edit" class="btn btn-primary">Add New Query</a>
</div>

<div class="table-responsive">
    <table class="table table-striped table-hover align-middle">
        <thead class="table-dark">
            <tr>
                <th scope="col">Title</th>
                <th scope="col">Success Rate</th>
            </tr>
        </thead>
        <tbody>
            @if (Model != null && Model.Count > 0)
            {
                @foreach (var query in Model)
                {
                    <tr onclick="window.location.href='/Home/Edit?queryId=@query.Id';"
                        style="cursor: pointer;"
                        class="clickable-row">
                        <td>@query.QueryTitle</td>
                        <td>@query.HistoricalSuccessRate.ToString("f2") %</td>
                    </tr>
                }
            }
            else
            {
                <tr>
                    <td colspan="3" class="text-center">No queries found. Click "Add New Query" to create one.</td>
                </tr>
            }
        </tbody>
    </table>
</div>
